# Test environment: CentOS/RHEL-like system  
FROM quay.io/centos/centos:stream9

# Install system dependencies for testing
RUN dnf update -y && dnf install -y --allowerasing \
    curl \
    wget \
    git \
    unzip \
    java-21-openjdk \
    docker \
    python3-pip \
    && dnf clean all \
    && pip3 install docker-compose

# Create test user (non-root)
RUN useradd -m -s /bin/bash testuser
USER testuser
WORKDIR /home/testuser

# Copy test scripts
COPY --chown=testuser:testuser scripts/ ./scripts/
COPY --chown=testuser:testuser fixtures/ ./fixtures/

# Set executable permissions
USER root
RUN chmod +x ./scripts/*.sh
USER testuser

# Default command runs installation tests
CMD ["./scripts/test-installation.sh"]